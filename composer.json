{
    "name": "laravilt/forms",
    "description": "Complete form builder system with 30+ field types, validation, and Blade/Inertia.js integration. Build complex forms with text inputs, selects, date pickers, file uploads, rich editors, repeaters, and more with real-time reactivity.",
    "version": "1.0.4",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "laravilt",
        "forms",
        "form-builder",
        "validation",
        "fields",
        "inertia",
        "vue",
        "blade"
    ],
    "authors": [
        {
            "name": "Fady Mondy",
            "email": "info@3x1.io"
        }
    ],
    "require": {
        "php": "^8.3|^8.4",
        "spatie/laravel-package-tools": "^1.14",
        "laravilt/support": "^1.0",
        "laravilt/schemas": "^1.0",
        "laravilt/actions": "^1.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.9||^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-livewire": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.5",
        "phpstan/extension-installer": "^1.3||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.1||^2.0",
        "phpstan/phpstan-phpunit": "^1.3||^2.0"
    },
    "autoload": {
        "psr-4": {
            "Laravilt\\Forms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laravilt\\Forms\\Tests\\": "tests/",
            "Laravilt\\Forms\\Tests\\Database\\Factories\\": "tests/database/factories",
            "Laravilt\\Forms\\Tests\\Database\\Seeders\\": "tests/database/seeders"
        }
    },
    "scripts": {
        "testbench": "vendor/bin/testbench package:discover --ansi",
        "db": "vendor/bin/testbench package:create-sqlite-db && vendor/bin/testbench migrate",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=512M",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laravilt\\Forms\\FormsServiceProvider"
            ]
        }
    },
    "prefer-stable": true
}
